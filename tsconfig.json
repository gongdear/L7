{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "jsx": "react",
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "jest", "node"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@cgcs2000/l7-core": ["packages/core/src"],
      "@cgcs2000/l7-component": ["packages/component/src"],
      "@cgcs2000/l7-layers": ["packages/layers/src"],
      "@cgcs2000/l7-map": ["packages/map/src"],
      "@cgcs2000/l7-maps": ["packages/maps/src"],
      "@cgcs2000/l7-scene": ["packages/scene/src"],
      "@cgcs2000/l7-renderer": ["packages/renderer/src"],
      "@cgcs2000/l7-three": ["packages/three/src"],
      "@cgcs2000/l7-source": ["packages/source/src"],
      "@cgcs2000/l7-mini": ["packages/mini/src"],
      "@cgcs2000/l7-utils": ["packages/utils/src"],
      "@cgcs2000/l7": ["packages/l7/src"],
      "*": ["packages", "typings/*"]
    },
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core",
    "useCache": false
  },
  "include": ["packages"],
  "exclude": ["node_modules", "packages/**/dist"]

}
